<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/rect_shape"
    >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="38px"
        android:layout_marginTop="30px"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_choice_desc"
            android:textSize="@dimen/text_size_22sp"
            android:textColor="@color/black"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            />

        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="60px"
            android:layout_height="24px"
            android:src="@drawable/icon_small_close"
            android:layout_alignParentRight="true"
            android:paddingRight="36px"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/pay_line_color"
        android:layout_marginLeft="44px"
        android:layout_marginRight="26px"
        android:layout_marginTop="16px"
        ></View>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="38px"
        android:layout_marginTop="36px"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/shengyu_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_22sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/red"
            android:textSize="@dimen/text_size_22sp"
            android:textStyle="bold"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pay_desc"
            android:textColor="@color/black"
            android:textSize="@dimen/text_size_22sp"
            android:textStyle="bold"
            android:layout_marginLeft="5px"
            />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="42px"
        >

        <LinearLayout
            android:id="@+id/ll_pay_wx"
            android:layout_width="0dp"
            android:layout_height="82px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="40px"
            android:gravity="center_vertical"
            android:background="@drawable/selector_pay_select"
            >
            <ImageView
                android:layout_width="58px"
                android:layout_height="58px"
                android:src="@drawable/icon_wx"
                android:layout_marginLeft="18px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_for_wx"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_22sp"
                android:textColor="@color/black"
                android:layout_marginLeft="12px"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pay_alipay"
            android:layout_width="0dp"
            android:layout_height="82px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:layout_marginLeft="16px"
            android:gravity="center_vertical"
            android:background="@drawable/selector_pay_select"
            >

            <ImageView
                android:layout_width="58px"
                android:layout_height="58px"
                android:src="@drawable/icon_alipay"
                android:layout_marginLeft="18px"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pay_for_alipay"
                android:textStyle="bold"
                android:textSize="@dimen/text_size_22sp"
                android:textColor="@color/black"
                android:layout_marginLeft="12px"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_pay_paypal"
            android:layout_width="0dp"
            android:layout_height="82px"
            android:layout_weight="1"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginLeft="16px"
            android:layout_marginRight="40px"
            android:background="@drawable/selector_pay_select"
            >

            <ImageView
                android:layout_width="168px"
                android:layout_height="44px"
                android:src="@drawable/icon_paypal"
                android:layout_marginLeft="26px"
                />
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/bt_pay"
        android:layout_width="448px"
        android:layout_height="48px"
        android:text="@string/pay_desc"
        android:background="@color/color_FF2626"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60px"
        android:textSize="16sp"
        android:textColor="@color/white"
        android:layout_marginBottom="42px"
        />

</LinearLayout>