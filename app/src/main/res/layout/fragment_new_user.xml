<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/main_background"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="62px"
        android:layout_marginRight="62px"
        android:layout_marginTop="20px"
        android:background="@drawable/rect_shape">

        <TextView
            android:id="@+id/tv_user_name_desc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16px"
            android:text="@string/user_name"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <RelativeLayout
            android:id="@+id/rl_edit_username"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:layout_marginRight="44px"
            android:layout_toRightOf="@+id/tv_user_name_desc"
            android:background="@drawable/gray_rect_shape">

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:focusable="false"
                android:focusableInTouchMode="false"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="44px"
                android:layout_height="24px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:paddingRight="20px"
                android:src="@drawable/edit" />
        </RelativeLayout>


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="62px"
        android:layout_marginRight="62px"
        android:layout_marginTop="12px"
        android:background="@drawable/rect_shape">

        <TextView
            android:id="@+id/tv_sex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:text="@string/tv_sex"
            android:textColor="@color/black"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_man"
            android:layout_width="56px"
            android:layout_height="56px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="142px"
            android:layout_toRightOf="@+id/tv_sex"
            android:background="@drawable/selector_checkbox_man"
            android:button="@null"
            android:checked="true" />

        <TextView
            android:id="@+id/tv_man"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@+id/cb_man"
            android:text="@string/man_desc"
            android:textColor="@color/man_selector_sex_color"
            android:textSize="16sp" />

        <CheckBox
            android:id="@+id/cb_girl"
            android:layout_width="56px"
            android:layout_height="56px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="76px"
            android:layout_toRightOf="@+id/cb_man"
            android:background="@drawable/selector_checkbox_girl"
            android:button="@null"
            android:checked="false" />

        <TextView
            android:id="@+id/tv_girl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12px"
            android:layout_toRightOf="@+id/cb_girl"
            android:text="@string/girl_desc"
            android:textColor="@color/black"
            android:textSize="16sp" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120px"
        android:layout_marginLeft="62px"
        android:layout_marginRight="62px"
        android:layout_marginTop="12px"
        android:background="@drawable/rect_shape">

        <TextView
            android:id="@+id/tv_age"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="25px"
            android:text="@string/age_desc"
            android:textColor="@color/black"
            android:textSize="16sp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="54px"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_5_9"
                    android:layout_width="118px"
                    android:layout_height="60px"
                    android:layout_marginLeft="38px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="32px">

                    <CheckBox
                        android:id="@+id/cb_5_9"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/selector_age_checkbox"
                        android:button="@null"
                        android:checked="true"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/tv_5_9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_10_14"
                    android:layout_width="118px"
                    android:layout_height="60px"
                    android:layout_marginLeft="54px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="32px">

                    <CheckBox
                        android:id="@+id/cb_10_14"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/selector_age_checkbox"
                        android:button="@null"
                        android:checked="false"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/tv_10_14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_15_20"
                    android:layout_width="118px"
                    android:layout_height="60px"
                    android:layout_marginLeft="54px"
                    android:layout_toRightOf="@+id/ll_10_14"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingTop="32px">

                    <CheckBox
                        android:id="@+id/cb_15_20"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/selector_age_checkbox"
                        android:button="@null"
                        android:checked="false"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/tv_15_20"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/ll_21_30"
                    android:layout_width="118px"
                    android:layout_height="60px"
                    android:layout_marginLeft="38px"
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="32px">

                    <CheckBox
                        android:id="@+id/cb_21_30"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/selector_age_checkbox"
                        android:button="@null"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/tv_21_30"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_30_50"
                    android:layout_width="118px"
                    android:layout_height="60px"
                    android:layout_marginLeft="54px"
                    android:layout_marginTop="20px"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="32px">

                    <CheckBox
                        android:id="@+id/cb_30_50"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/selector_age_checkbox"
                        android:button="@null"
                        android:checked="false"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/tv_30_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/ll_50"
                    android:layout_width="118px"
                    android:layout_height="60px"
                    android:layout_marginLeft="54px"
                    android:layout_marginTop="20px"
                    android:layout_toRightOf="@+id/ll_10_14"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:paddingBottom="32px">

                    <CheckBox
                        android:id="@+id/cb_50"
                        android:layout_width="24px"
                        android:layout_height="24px"
                        android:layout_marginLeft="20px"
                        android:background="@drawable/selector_age_checkbox"
                        android:button="@null"
                        android:checked="false"
                        android:clickable="false" />

                    <TextView
                        android:id="@+id/tv_50"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10px"
                        android:text=""
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </RelativeLayout>

    <Button
        android:id="@+id/bt_exit"
        android:layout_width="match_parent"
        android:layout_height="50px"
        android:layout_marginBottom="44px"
        android:layout_marginLeft="130px"
        android:layout_marginRight="130px"
        android:layout_marginTop="30px"
        android:background="@drawable/exit_login"
        android:paddingBottom="10px"
        android:paddingTop="10px"
        android:text="@string/exit_login"
        android:textColor="@color/white"
        android:textSize="20sp" />


</LinearLayout>