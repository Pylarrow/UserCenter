<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/modify_nickname_desc"
            android:textSize="@dimen/text_size_20sp"
            android:textColor="@color/color_363636"
            android:layout_marginTop="180px"
            android:layout_marginLeft="128px"
            />

        <RelativeLayout
            android:id="@+id/rl_edit_username"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120px"
            android:layout_marginRight="110px"
            android:layout_marginTop="14px"
            android:background="@drawable/gray_rect_shape">

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>
        
        <Button
            android:id="@+id/bt_save"
            android:layout_width="238px"
            android:layout_height="56px"
            android:background="@drawable/shape_button_save"
            android:text="@string/save_desc"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="96px"
            />


    </LinearLayout>


</RelativeLayout>