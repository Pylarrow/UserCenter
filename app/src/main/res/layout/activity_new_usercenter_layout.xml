<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        >

        <LinearLayout
            android:layout_width="324px"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >

            <RelativeLayout
                android:id="@+id/rl_user_center"
                android:layout_width="match_parent"
                android:layout_height="214px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:background="@color/color_left_full">

                <View
                    android:id="@+id/line_01"
                    android:layout_width="4px"
                    android:layout_height="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:background="#27BBFF"
                    >
                </View>

                <ImageView
                    android:id="@+id/iv_icon"
                    android:layout_width="110px"
                    android:layout_height="110px"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="32px"
                    android:src="@drawable/man_big" />

                <ImageView
                    android:layout_width="20px"
                    android:layout_height="20px"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="20px"
                    android:src="@drawable/arrow_right" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/iv_icon"
                    android:layout_marginTop="10px"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:id="@+id/tv_not_login_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/please_login"
                        android:textColor="@color/black"
                        android:textSize="@dimen/text_size_22sp"
                        />

                    <TextView
                        android:id="@+id/tv_user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--"
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:singleLine="true"
                        android:maxEms="6"
                        android:ellipsize="end"
                        android:textSize="@dimen/text_size_22sp" />


                    <ImageView
                        android:id="@+id/iv_sex_icon"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:layout_marginLeft="6px"
                        android:layout_marginRight="6px"
                        android:visibility="gone"
                        android:src="@drawable/male" />

                    <TextView
                        android:id="@+id/tv_age"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textColor="@color/black"
                        android:visibility="gone"
                        android:textSize="@dimen/text_size_22sp" />

                </LinearLayout>

            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="2px"
                android:layout_marginLeft="38px"
                android:layout_marginRight="26px"
                android:background="@color/color_line"
                />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >

                <RelativeLayout
                    android:id="@+id/rl_new_phone"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:background="@color/white"
                    >

                    <View
                        android:id="@+id/line_02"
                        android:layout_width="4px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#27BBFF"
                        android:visibility="gone"
                        ></View>

                    <ImageView
                        android:id="@+id/iv_tel"
                        android:layout_width="26px"
                        android:layout_height="26px"
                        android:src="@drawable/tel"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36px"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tel_desc"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_tel"
                        android:layout_marginLeft="4px"
                        />

                    <ImageView
                        android:id="@+id/iv_arrow_tel"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        />

                    <TextView
                        android:id="@+id/tv_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_arrow_tel"
                        android:layout_marginRight="2dp"
                        />

                </RelativeLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="26px"
                    android:background="@color/color_line"
                    />


                <RelativeLayout
                    android:id="@+id/rl_new_email"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:background="@color/white"
                    >

                    <View
                        android:id="@+id/line_03"
                        android:layout_width="4px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#27BBFF"
                        android:visibility="gone"
                        ></View>

                    <ImageView
                        android:id="@+id/iv_email"
                        android:layout_width="26px"
                        android:layout_height="26px"
                        android:src="@drawable/email"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36px"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/email_desc"
                        android:textSize="18sp"
                        android:singleLine="true"
                        android:maxEms="6"
                        android:ellipsize="end"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_email"
                        android:layout_marginLeft="4px"
                        />

                    <ImageView
                        android:id="@+id/iv_arrow_email"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        />

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_arrow_email"
                        android:layout_marginRight="4px"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="26px"
                    android:background="@color/color_line"
                    />

                <RelativeLayout
                    android:id="@+id/rl_new_grade"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:background="@color/white"
                    >

                    <View
                        android:id="@+id/line_04"
                        android:layout_width="4px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#27BBFF"
                        android:visibility="gone"
                        ></View>

                    <ImageView
                        android:id="@+id/iv_grade"
                        android:layout_width="26px"
                        android:layout_height="26px"
                        android:src="@drawable/grade"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36px"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/grade_desc"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_grade"
                        android:layout_marginLeft="4px"
                        />

                    <ImageView
                        android:id="@+id/iv_arrow_grade"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        />

                    <TextView
                        android:id="@+id/tv_grade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_arrow_grade"
                        android:layout_marginRight="4px"
                        />

                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="26px"
                    android:background="@color/color_line"
                    />

                <RelativeLayout
                    android:id="@+id/rl_new_device"
                    android:layout_width="match_parent"
                    android:layout_height="70px"
                    android:background="@color/white"
                    >
                    <View
                        android:id="@+id/line_05"
                        android:layout_width="4px"
                        android:layout_height="match_parent"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:background="#27BBFF"
                        android:visibility="gone"
                        ></View>

                    <ImageView
                        android:id="@+id/iv_device"
                        android:layout_width="26px"
                        android:layout_height="26px"
                        android:src="@drawable/device"
                        android:layout_centerVertical="true"
                        android:layout_marginLeft="36px"
                        />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/device_desc"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toRightOf="@+id/iv_device"
                        android:layout_marginLeft="2dp"
                        />

                    <ImageView
                        android:id="@+id/iv_arrow_device"
                        android:layout_width="20px"
                        android:layout_height="20px"
                        android:src="@drawable/arrow_right"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="20px"
                        />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="级别"
                        android:textSize="10sp"
                        android:textColor="@color/black"
                        android:layout_centerVertical="true"
                        android:layout_toLeftOf="@+id/iv_arrow_device"
                        android:layout_marginRight="4px"
                        android:visibility="gone"
                        />


                </RelativeLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="2px"
                    android:layout_marginLeft="38px"
                    android:layout_marginRight="26px"
                    android:background="@color/color_line"
                    />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/fragment_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:background="@color/color_not_login_bg"
            android:orientation="horizontal"></LinearLayout>

    </LinearLayout>




</LinearLayout>

