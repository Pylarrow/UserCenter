<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right">
    
    <LinearLayout
        android:id="@+id/rl_device_content2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="gone"
        >
        <RelativeLayout
            android:layout_width="536px"
            android:layout_height="222px"
            android:background="@drawable/renew_card"
            android:layout_marginTop="80px"
            android:layout_marginLeft="100px"
            >

            <TextView
                android:id="@+id/tv_new_renew_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="64px"
                android:textColor="@color/white"
                android:layout_marginLeft="206px"
                android:layout_marginTop="30px"
                />

            <TextView
                android:id="@+id/tv_renew_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/renew_detail_info_desc"
                android:textSize="@dimen/text_size_18sp"
                android:textColor="@color/white"
                android:layout_marginLeft="20px"
                android:layout_marginTop="146px"
                />

            <TextView
                android:id="@+id/tv_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_renew_detail"
                android:text="@string/renew_info"
                android:textSize="10px"
                android:textColor="@color/white"
                android:layout_marginLeft="20px"
                android:layout_marginRight="20px"
                />



        </RelativeLayout>

        <LinearLayout
            android:id="@+id/ll_pay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20px"
            android:layout_below="@+id/rl_pic"
            >

            <LinearLayout
                android:id="@+id/ll_pay_wx"
                android:layout_width="170px"
                android:layout_height="68px"
                android:orientation="horizontal"
                android:layout_marginLeft="100px"
                android:gravity="center_vertical"
                android:background="@drawable/selector_pay_select"
                >
                <ImageView
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:src="@drawable/icon_wx"
                    android:layout_marginLeft="18px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_for_wx"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_16sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="12px"
                    />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay_paypal"
                android:layout_width="170px"
                android:layout_height="68px"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginRight="54px"
                android:layout_marginLeft="16px"
                android:background="@drawable/selector_pay_select"
                >

                <ImageView
                    android:layout_width="148px"
                    android:layout_height="38px"
                    android:src="@drawable/icon_paypal"
                    android:layout_marginLeft="16px"
                    />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_pay_alipay"
                android:layout_width="0dp"
                android:layout_height="68px"
                android:orientation="horizontal"
                android:layout_marginLeft="16px"
                android:gravity="center_vertical"
                android:visibility="gone"
                android:background="@drawable/selector_pay_select"
                >

                <ImageView
                    android:layout_width="44px"
                    android:layout_height="44px"
                    android:src="@drawable/icon_alipay"
                    android:layout_marginLeft="18px"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pay_for_alipay"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_18sp"
                    android:textColor="@color/black"
                    android:layout_marginLeft="16px"
                    />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/bt_new_renew2"
            android:layout_width="536px"
            android:layout_height="68px"
            android:background="@color/color_FFC400"
            android:layout_centerHorizontal="true"
            android:text="@string/renew_desc"
            android:textColor="@color/white"
            android:layout_marginTop="24px"
            android:textSize="24px"
            android:layout_marginLeft="100px"
            />


    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_device_content1"
        android:layout_width="546px"
        android:layout_height="246px"
        android:layout_marginLeft="96px"
        android:layout_marginTop="104px"
        android:background="@drawable/vip"
        >

        <ImageView
            android:id="@+id/iv_overdue"
            android:layout_width="174px"
            android:layout_height="108px"
            android:src="@drawable/new_overdue"
            android:layout_marginTop="68px"
            android:layout_marginLeft="18px"
            android:visibility="gone"
            />

        <TextView
            android:id="@+id/tv_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="2018-1-31"
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/white"
            android:layout_marginRight="14px"
            android:layout_marginTop="32px"
            />
        <TextView
            android:id="@+id/tv_xlh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="SN:5 6 4 d E N 6 H 3 D "
            android:textSize="@dimen/text_size_18sp"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginTop="140px"
            android:layout_marginRight="14px"
            />
        <TextView
            android:id="@+id/tv_new_end_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:layout_marginRight="14px"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="24px"
            android:textSize="@dimen/text_size_14sp"
            />

    </RelativeLayout>
    
    <Button
        android:id="@+id/bt_new_renew"
        android:layout_width="536px"
        android:layout_height="68px"
        android:background="@color/color_FFC400"
        android:layout_centerHorizontal="true"
        android:text="@string/renew_desc"
        android:textColor="@color/white"
        android:layout_below="@+id/rl_device_content1"
        android:layout_marginTop="32px"
        android:textSize="24px"
        />

</RelativeLayout>