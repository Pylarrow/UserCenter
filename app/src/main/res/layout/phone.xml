<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/right"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/tel_desc"
            android:textSize="@dimen/text_size_20sp"
            android:textColor="@color/color_363636"
            android:layout_marginTop="180px"
            android:layout_marginLeft="128px"
            />

        <RelativeLayout
            android:id="@+id/rl_phone"
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="120px"
            android:layout_marginRight="110px"
            android:layout_marginTop="14px"
            android:background="@drawable/gray_rect_shape">

            <EditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="17dp"
                android:layout_marginRight="8dp"
                android:background="@null"
                android:focusable="false"
                android:clickable="false"
                android:focusableInTouchMode="false"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp" />

        </RelativeLayout>

        <Button
            android:id="@+id/bt_save"
            android:layout_width="238px"
            android:layout_height="56px"
            android:background="@drawable/shape_button_save"
            android:text="@string/save_desc"
            android:textSize="24sp"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="96px"
            />


    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:layout_marginTop="60px"
        android:layout_marginLeft="62px"
        android:layout_marginBottom="60px"
        android:layout_marginRight="62px"
        android:visibility="gone"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="62px"
            android:orientation="horizontal"
            android:background="@color/top_color"
            android:gravity="center_vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/bind_phone_desc"
                android:textSize="20sp"
                android:textColor="@color/white"
                android:layout_marginLeft="26px"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="66px"
            android:layout_marginRight="66px"
            android:layout_marginTop="54px"
            android:background="@drawable/gray_rect_shape">

            <ImageView
                android:id="@+id/iv_phone"
                android:layout_width="24px"
                android:layout_height="24px"
                android:layout_centerVertical="true"
                android:src="@drawable/phone"
                android:layout_marginLeft="22px"
                />

            <EditText
                android:id="@+id/et_user_name"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_centerVertical="true"
                android:layout_marginLeft="12px"
                android:layout_marginRight="16px"
                android:background="@null"
                android:enabled="false"
                android:layout_toRightOf="@+id/iv_phone"
                android:text=""
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ImageView
                android:id="@+id/iv_edit"
                android:layout_width="22px"
                android:layout_height="22px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="22px"
                android:src="@drawable/edit" />
        </RelativeLayout>

        <Button
            android:id="@+id/bt_modify"
            android:layout_width="match_parent"
            android:layout_height="48px"
            android:layout_marginLeft="66px"
            android:layout_marginRight="66px"
            android:layout_marginTop="40px"
            android:background="@color/top_color"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="@string/modify_desc"
            />

    </LinearLayout>

</RelativeLayout>

